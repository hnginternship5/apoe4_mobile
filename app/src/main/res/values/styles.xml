<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="Widget.MaterialProgressBar.ProgressBar.Large.NoPadding">
        <item name="android:minWidth">66.5dp</item>
        <item name="android:maxWidth">66.5dp</item>
        <item name="android:minHeight">66.5dp</item>
        <item name="android:maxHeight">66.5dp</item>
    </style>

    <style name="custom_progress" parent="Widget.MaterialProgressBar.ProgressBar.Large">
        <item name="android:minWidth">66.5dp</item>
        <item name="android:maxWidth">66.5dp</item>
        <item name="android:minHeight">66.5dp</item>
        <item name="android:maxHeight">66.5dp</item>
    </style>

    <style name="echelle_relecture">
        <item name="android:background">@drawable/text_bg</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="progressStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
